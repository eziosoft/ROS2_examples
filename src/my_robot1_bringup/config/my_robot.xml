<?xml version="1.0"?>
<robot name="my_robot">

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>
    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.17" length="0.080" />
            </geometry>
            <origin xyz="0 0 0.046" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="front">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.01" />
            </geometry>
            <origin xyz="0 0 0.005" rpy="0 0 0" />
            <material name="red" />
        </visual>

    </link>

    <link name="laser">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.05" />
            </geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0" />
            <material name="red" />
        </visual>

    </link>

    <joint name="base_laser_joint" type="fixed">
        <parent link="base_link" />
        <child link="laser" />
        <origin xyz="0 0 0.08" rpy="0 0 0" />
    </joint>

    <joint name="base_front_joint" type="fixed">
        <parent link="base_link" />
        <child link="front" />
        <origin xyz="0.3 0 0.08" rpy="0 0 0" />
    </joint>
</robot>